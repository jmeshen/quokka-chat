{
    "manifest_version": 2,

    "name": "Quokka Chat",
    "description": "Overlays Quokka.chat forum content onto a YouTube video page",
    "version": "1.0",

    "browser_action": {
        "default_icon": "quokka.png",
        "default_title": "QUOKKA!!!",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["https://www.youtube.com/watch*"],
        "js": ["/js/jquery-2.1.4.min.js", "quokka.js"]
    }],
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}